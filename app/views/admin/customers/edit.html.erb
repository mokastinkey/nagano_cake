<h2>
  <%= @customer.full_name %>さんの会員情報編集
</h2>

<%= form_with model: @customer, url:"/admin/customers/#{@customer.id}", local: true do |f| %>
  <div>
    <%= f.label :会員ID %>
    <%= @customer.id %>
  </div>
  <div>
    <%= f.label :氏名 %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
　</div>
　<div>
　  <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
　</div>
　<div>
　  <%= f.label :postal_code, "郵便番号" %>
　  <%= f.text_field :postal_code, autofocus: true %>
　</div>
　<div>
　  <%= f.label :telephone_number, "電話番号" %>
　  <%= f.text_field :telephone_number, autofocus: true %>
　</div>
　<div>
　  <%= f.label :email, "メールアドレス" %>
　  <%= f.text_field :email, autofocus: true %>
　</div>
　<div>
　  <%= f.label :会員ステータス %>
　  <%= f.radio_button :is_active, true %>
　  <%= f.label :is_active, '有効', value: true %>
　  <%= f.radio_button :is_active, false %>
　  <%= f.label :is_active, '退会', value: false %>
　</div>
　<div>
　  <%= f.submit "変更を保存" %>
　</div>
<% end %>

