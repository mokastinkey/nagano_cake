<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.full_name %></td>
          <% end %>
        <td><%= customer.email %></td>
        <td><%= customer.is_active ? '有効' : '退会' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
