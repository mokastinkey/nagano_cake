<div class="container">
  <div class="row">
    <h5><span>会員詳細</span></h5>
  </div>
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>会員ID</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.id %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>氏名</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.full_name %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>フリガナ</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.full_name_kana %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>郵便番号</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.postal_code %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>住所</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.address %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>電話番号</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.telephone_number %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>メールアドレス</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.email %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-lg-3">
      <h6>会員ステータス</h6>
    </div>
    <div class="col-sm-8 col-lg-9">
      <%= @customer.is_active ? '有効' : '退会' %>
    </div>
  </div>
  <%= link_to edit_admin_customer_path(@customer.id), class: "btn btn-outline-success btn-sm" do %>
    編集する
  <% end %><br>
  <%= link_to admin_home_path, class: "btn btn-outline-success btn-sm" do %>
  注文履歴一覧に戻る
  <% end %>