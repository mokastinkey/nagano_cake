<div class="container">
  <h5><span>ジャンル編集</span></h5>
  <div class="row">
    <div class="col-sm-9 col-md-8 col-lg-6 ">
      <%= form_with model: @genre, url: "/admin/genres/#{@genre.id}", local: true do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, autofocus: true %>
        <%= f.submit "変更を保存", class: "btn btn-outline-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>