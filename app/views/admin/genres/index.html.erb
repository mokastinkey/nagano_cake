<div class="container">
  <h5><span>ジャンル一覧・追加</span></h5>
    <div class="row">
      <div class="col-sm-9 col-md-8 col-lg-6 ">

        <%= form_with model: @genre, url:'/admin/genres', local: true do |f| %>
          <div class="field">
            <%= f.label :ジャンル名 %>
            <%= f.text_field :name, autofocus: true %>
            <%= f.submit '新規登録', class: "btn btn-outline-success btn-sm " %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-md-8 col-lg-6 ">
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th colspan="2">ジャンル</td>
            </tr>
          </thead>
    
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

</div>