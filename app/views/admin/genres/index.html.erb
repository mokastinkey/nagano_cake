<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>

<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url:'/admin/genres', local: true do |f| %>
  <div class="field">
    <%= f.label :ジャンル名 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="2">ジャンル</td>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>