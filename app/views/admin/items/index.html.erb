<div class="container">
  <h5>
    <span>
      商品一覧
    </span>
    <%= link_to new_admin_item_path, class: 'fas fa-plus-circle nav-link text-dark' do %><% end %>
    </h5>
  
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 ">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          <tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
              <tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


</div>