<h2>
  商品編集
</h2>

<%= form_with model: @item, url: "/admin/items/#{@item.id}", local: true do |f| %>
  <div class ="form-group">
    <%= f.label :商品画像 %>
    <%= f.attachment_field :image %>
  </div>
  <div class ="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name, autofocus: true, placeholder: "商品名" %>
  </div>
  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
  </div>
  <div class ="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
  </div>
  <div class ="form-group">
    <%= f.label :税抜き価格 %>
    <%= f.text_field :price, placeholder: 1000 %>円
  </div>
  <div class ="form-group">
    <%= f.label :販売ステータス %>
    <div>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
    </div>
    <div>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "変更を保存" %>
  </div>

<% end %>