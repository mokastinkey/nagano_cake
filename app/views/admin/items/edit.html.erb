<div class="container">
  <h5><span>商品編集</span></h5>

<%= form_with model: @item, url: "/admin/items/#{@item.id}", local: true do |f| %>
  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-3">
      <%= f.label :商品画像 %>
    </div>
    <div class="col-sm-8 col-md-9 col-lg-9">
      <%= f.attachment_field :image %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-3">
      <%= f.label :商品名 %>
    </div>
    <div class="col-sm-8 col-md-9 col-lg-9">
      <%= f.text_field :name, size: 45, autofocus: true, placeholder: "商品名" %>
    </div>
  </div>
  
  
  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-3">
      <%= f.label :商品説明 %>
    </div>
    <div class="col-sm-8 col-md-9 col-lg-9">
      <%= f.text_area :introduction, size: "10x4", class: "form-control", placeholder: "ここに説明文を記述します" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-3">
      <%= f.label :ジャンル %>
    </div>
    <div class="col-sm-8 col-md-9 col-lg-9">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-3">
      <%= f.label :税抜き価格 %>
    </div>
    <div class="col-sm-8 col-md-9 col-lg-9">
      <%= f.number_field :price, placeholder: 1000 %>円
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-3">
      <%= f.label :販売ステータス %>
    </div>
    <div class="col-sm-8 col-md-9 col-lg-9">
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
  </div>
  
  <div class="center">
    <%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm" %>
  </div>

<% end %>

</div>