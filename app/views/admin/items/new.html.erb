<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>

<h2>
  商品新規登録
</h2>

<%= form_with model:@item, local true do |f| %>
  <div class ="form-group">
    <%= f.label :商品画像 %>
    <%= f.attachment_field :image %>
  </div>
  
  <div class ="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name, autofocus: true, placeholder: "商品名" %>
  </div>
  
  <div class ="form-group">
    <%= f.label :ジャンル %>
    <%= f.select :genre_id, options_for_select([[--選択してください--, '']]) %>
  </div>
  
  <div class ="form-group">
    <%= f.label :税抜き価格 %>
    <%= f.text_field :price %>円
  </div>
  
  <div class ="form-group">
    <%= f.label :販売ステータス %>
    <%= f.radio_button :is_active %>
  </div>
  
  <div class="form-group">
    <%= f.submit "新規登録" %>
  </div>
  
<% end %>