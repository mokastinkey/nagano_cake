<div class="container">
  <div class="row">
    <h5><span>商品詳細</span></h5>
  </div>
  <div class="row">
    <div class="col-sm-5 col-md-5 col-lg-4">
      <%= attachment_image_tag @item, :image, size: "300x300", format: 'jpeg' %>
    </div>
    <div class="margin col-sm-7 col-md-7 col-lg-8 ">
      
      <div class="row">
        <div class="col-sm-4 col-lg-3">
          <h6>商品</h6>
        </div>
        <div class="col-sm-8 col-lg-9">
          <%= @item.name %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-4 col-lg-3">
          <h6>商品説明</h6>
        </div>
        <div class="col-sm-8 col-lg-9">
          <%= @item.introduction %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-4 col-lg-3">
          <h6>ジャンル</h6>
        </div>
        <div class="col-sm-8 col-lg-9">
          <%= @item.genre.name %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-4 col-lg-3">
          <h6>税込価格(税抜価格)</h6>
        </div>
        <div class="col-sm-8 col-lg-9">
          <%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-4 col-lg-3">
          <h6>販売ステータス</h6>
        </div>
        <div class="col-sm-8 col-lg-9">
          <%= @item.is_active ? '販売中' : '販売' %>
        </div>
      </div>
      
      
      <div class="center">
        <%= link_to edit_admin_item_path(@item.id), class: "btn btn-outline-success btn-sm" do %>編集する<% end %>
      </div>
      
      
    </div>
  </div>
</div>