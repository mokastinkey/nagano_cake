<div class="container">
  <h3 class="text-center" style="letter-spacing:0.15rem;">New</3>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-6 col-md-4 col-lg3">
        <div class="card w-20  mt-4 shadow-md">

          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', class: "card-img-top" %>
          <% end %>

          <div class="card-body">
            <div class="card-title"><%= item.name %></div>
            <p class="card-text"><%= item.price %>å††</p>
            <%= link_to "check", item_path(item.id), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



